// ================================================
// Prisma schema
// ================================================

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
}

enum DonationStatus {
  PENDING
  SUCCESS
  FAILED
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  role      Role     @default(ADMIN)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Category {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  slug      String    @unique
  projects  Project[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Project {
  id            Int        @id @default(autoincrement())
  title         String
  slug          String     @unique
  summary       String?
  thumbnailUrl  String?
  contentJson   Json       @db.JsonB
  targetAmount  Decimal    @db.Decimal(18, 2)
  currentAmount Decimal    @default(0) @db.Decimal(18, 2)
  isActive      Boolean    @default(true)
  categoryId    Int?
  category      Category?  @relation(fields: [categoryId], references: [id])
  donations     Donation[]
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  @@index([slug])
  @@index([categoryId])
}

model Donation {
  id              Int            @id @default(autoincrement())
  projectId       Int
  project         Project        @relation(fields: [projectId], references: [id])
  donorName       String?
  message         String?
  amountExpected  Decimal        @db.Decimal(18, 2)
  amountReceived  Decimal?       @db.Decimal(18, 2)
  paymentCode     String         @unique
  status          DonationStatus @default(PENDING)
  sepayTxnId      BigInt?
  transferType    String?
  transferContent String?
  rawPayload      Json?          @db.JsonB
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  @@index([projectId])
  @@index([paymentCode])
  @@index([status])
}

model SystemSetting {
  id        Int      @id @default(autoincrement())
  key       String   @unique
  value     Json     @db.JsonB
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
